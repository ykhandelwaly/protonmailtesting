<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/sender_initial_view_size"
    android:layout_height="@dimen/sender_initial_view_size">

    <TextView
        android:id="@+id/senderInitialTextView"
        style="@style/Proton.Text.DefaultSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_sender_initial"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="S" />

    <ImageView
        android:id="@+id/checkImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_selection_mode_background"
        android:padding="@dimen/sender_initial_view_check_icon_padding"
        app:srcCompat="@drawable/selector_selection_mode_icon"
        android:visibility="invisible"
        app:tint="@color/icon_inverted" />

</FrameLayout>
