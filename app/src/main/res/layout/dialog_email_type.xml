<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_norm"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="0dp"
    android:paddingRight="0dp">

    <TextView
        style="@style/Proton.Text.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fields_default_space_large"
        android:paddingStart="@dimen/fields_default_space_small_plus"
        android:paddingLeft="@dimen/fields_default_space_small_plus"
        android:paddingEnd="@dimen/fields_default_space_small"
        android:paddingRight="@dimen/fields_default_space_small"
        android:text="@string/type_title" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/padding_xl">

        <LinearLayout
            android:id="@+id/standard_option_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </RelativeLayout>
</LinearLayout>
