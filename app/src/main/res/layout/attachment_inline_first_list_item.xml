<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_m">

    <TextView
        style="@style/Proton.Text.Default"
        android:id="@+id/num_embedded_images_attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_m"
        android:textColor="?attr/brand_norm" />

    <include
        layout="@layout/attachment_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/attachment_list_spacing" />
</LinearLayout>
