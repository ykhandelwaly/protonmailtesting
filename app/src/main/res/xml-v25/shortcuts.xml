<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="compose"
        android:enabled="true"
        android:icon="@drawable/ic_compose_shortcut"
        android:shortcutShortLabel="@string/shortcut_compose"
        android:shortcutLongLabel="@string/shortcut_compose_new_message">
        <intent
            android:action="ch.protonmail.android.COMPOSE"
            android:targetClass="ch.protonmail.android.activities.composeMessage.ComposeMessageActivity"
            android:targetPackage="ch.protonmail.android">
            <extra
                android:name="extra_in_app"
                android:value="false" />
        </intent>
        <categories
            android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
